@page "/bookings"
@rendermode InteractiveServer

@using PassportBookingReportDB.Models
@using QuestPDF.Fluent
@using QuestPDF.Infrastructure
@using Microsoft.EntityFrameworkCore
@inject IJSRuntime JS
@inject AppDbContext DbContext

<h3>Bookings Table</h3>

@if (bookings == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Logo</th>
                <th>Booking Code</th>
                <th>Full Name</th>
                <th>Appointment Date</th>
                <th>Office</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in bookings)
            {
                <tr>
                    <td>
                        @if (b.Logo != null && b.Logo.Length > 0)
                        {
                            <img src="@GetImageBase64(b.Logo)" width="50" height="50" />
                        }
                    </td>
                    <td>@b.BookingCode</td>
                    <td>@b.FullName</td>
                    <td>@b.AppointmentDate?.ToShortDateString()</td>
                    <td>@b.OfficeName</td>
                    <td>
                        <button class="btn btn-primary btn-sm" @onclick="() => ViewBooking(b)">View</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (showPopup && selectedBooking != null)
{
    <div class="modal fade show d-block" style="background-color:rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Booking Details</h5>
                    <button class="btn-close" @onclick="() => ClosePopup()"></button>
                </div>
                <div class="modal-body">
                    <p><b>Booking Code:</b> @selectedBooking.BookingCode</p>
                    <p><b>Name:</b> @selectedBooking.FullName</p>
                    <p><b>Appointment:</b> @selectedBooking.AppointmentDate?.ToShortDateString()</p>
                    <p><b>Office:</b> @selectedBooking.OfficeName</p>
                    <p><b>Phone:</b> @selectedBooking.PhoneNumber</p>
                    @if (selectedBooking.Logo != null && selectedBooking.Logo.Length > 0)
                    {
                        <img src="@GetImageBase64(selectedBooking.Logo)" width="100" />
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="PrintPopup">Print</button>
                    <button class="btn btn-primary" @onclick="ClosePopup">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<BookingsWithLogo> bookings;
    private BookingsWithLogo selectedBooking;
    private bool showPopup = false;

    protected override async Task OnInitializedAsync()
    {
        // Correct DbSet name: BookingsWithLogo
        bookings = await DbContext.BookingsWithLogos
            .OrderBy(b => b.Id)
            .Take(10)
            .ToListAsync();
    }

    private string GetImageBase64(byte[] imageBytes)
    {
        if (imageBytes == null || imageBytes.Length == 0)
            return string.Empty;

        return $"data:image/png;base64,{Convert.ToBase64String(imageBytes)}";
    }

    private void ViewBooking(BookingsWithLogo booking)
    {
        selectedBooking = booking;
        showPopup = true;
        StateHasChanged(); // ensure popup renders
    }

    private void ClosePopup()
    {
        showPopup = false;
        selectedBooking = null;
    }

    private async Task PrintPopup()
    {
        await JS.InvokeVoidAsync("window.print");
    }

}
